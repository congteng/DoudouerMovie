<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:background="@color/dd_background"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<FrameLayout 
	    	android:layout_width="50dip"
			android:layout_height="50dip" 
	    	android:foreground="@drawable/images_border_radius">
			<ImageView 
				android:id="@+id/user_avatar_ImageView" 
				android:layout_width="fill_parent" 
        		android:layout_height="fill_parent"
        		android:background="@drawable/avatar_default"
        		android:scaleType="centerCrop" />
		</FrameLayout>	
		<ImageView 
			android:gravity="center"
			android:id="@+id/logo_ImageView" 
			android:paddingLeft="30dip"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" 
			android:src="@drawable/logo_top" />
		<TextView
			android:id="@+id/nickName_TextView"
			android:textSize="30.0sp"
			android:paddingTop="4dip"
			android:textAppearance="@android:style/TextAppearance.Large" 
			android:gravity="right"
			android:layout_width="80dip"
			android:layout_height="fill_parent" />
	</LinearLayout>
	<LinearLayout 
		android:paddingTop="9dip"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:layout_width="260dip"
		android:layout_height="wrap_content">
		<TextView
			android:text="@string/tel_info"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			style="@style/tel"/>
	</LinearLayout>
	<LinearLayout 
		android:orientation="horizontal"
		android:paddingTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="55dip">
		<EditText 
			android:gravity="left" 
			android:id="@+id/tel_number_edittext"
			android:layout_width="200dip" 
			android:layout_height="fill_parent"
			android:hint="@string/please_input_telnumber" 
			android:singleLine="true"
			android:layout_weight="1.0"
			android:numeric="integer"
			android:inputType="textCapSentences|textAutoCorrect|textMultiLine" />
		<FrameLayout 
			android:paddingRight="5dip"
			android:layout_gravity="right"
			android:paddingLeft="5dip"
	    	android:layout_width="90dip"
			android:layout_height="40dip">
			<Button 
				android:id="@+id/search_tel_button"
				android:layout_width="fill_parent" 
	       		android:layout_height="fill_parent"
	       		android:background="@drawable/btn_search"/>
		</FrameLayout>
	</LinearLayout>
	<LinearLayout 
    	android:orientation="vertical" 
    	android:paddingTop="11.0dip" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="1.0"
    	android:layout_marginLeft="2.0dip">
		<TextView 
			android:text="@string/result"
           	android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	style="@style/tel" />
        <TextView 
        	android:paddingTop="5dip"
			android:paddingLeft="10dip"
           	android:id="@+id/tel_result_textview" 
           	android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	style="@style/content" />
    </LinearLayout>
    <FrameLayout 
		android:layout_marginBottom="20dip"
		android:layout_gravity="center|bottom"
    	android:layout_width="200dip"
		android:layout_height="60dip">
		<ImageView 
			android:layout_width="fill_parent" 
       		android:layout_height="fill_parent"
       		android:background="@drawable/logo"
       		android:scaleType="centerCrop" />
	</FrameLayout>	
</LinearLayout>
