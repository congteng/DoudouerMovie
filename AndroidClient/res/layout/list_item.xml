<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:orientation="horizontal" 
	android:paddingLeft="8.0dip" 
	android:paddingTop="7.0dip" 
	android:paddingRight="7.0dip" 
	android:paddingBottom="7.0dip" 
	android:background="@color/list_background_color" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout 
    	android:layout_width="32.0dip" 
    	android:layout_height="32.0dip" 
    	android:foreground="@drawable/images_border_radius">
        <ImageView 
        	android:id="@+id/avatar_image" 
        	android:layout_width="fill_parent" 
        	android:layout_height="fill_parent" 
        	android:background="@drawable/avatar_default"
        	android:scaleType="centerCrop"
        	/>
    </FrameLayout>
    <LinearLayout 
    	android:orientation="vertical" 
    	android:background="@drawable/dialog_from_left_normal" 
    	android:paddingLeft="11.0dip" 
    	android:paddingTop="5.0dip" 
    	android:paddingRight="5.0dip" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="1.0"
    	android:layout_marginLeft="2.0dip">
        <LinearLayout 
        	android:orientation="horizontal" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content" 
        	android:layout_marginBottom="2.0dip">
            <TextView 
            	android:id="@+id/nickname_freshnews_happento" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" 
            	android:paddingLeft="5dip"
            	android:layout_weight="1.0" 
            	style="@style/nickName" />
            <TextView 
            	android:layout_gravity="right" 
            	android:id="@+id/timestamp" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" 
            	style="@style/nickName" />
        </LinearLayout>
        <FrameLayout 
        	android:paddingLeft="30.0dip" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:layout_gravity="left">
    		<TextView 
	           	android:id="@+id/freshnews_content" 
	           	android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:maxLines="3" 
	           	style="@style/content"/>
    	</FrameLayout>
        <LinearLayout 
        	android:visibility="gone"
        	android:id="@+id/discuss_linearLayout1"
			android:orientation="horizontal" 
			android:paddingLeft="11.0dip" 
			android:paddingTop="5.0dip" 
			android:paddingRight="7.0dip" 
			android:paddingBottom="2.0dip" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		    <FrameLayout 
		    	android:layout_width="24.0dip" 
		    	android:layout_height="24.0dip" 
		    	android:foreground="@drawable/images_border_radius">
		        <ImageView 
		        	android:id="@+id/avatar_image_in_discuss1" 
		        	android:layout_width="fill_parent" 
		        	android:layout_height="fill_parent" 
		        	android:background="@drawable/avatar_default"
		        	android:scaleType="centerCrop" />
		    </FrameLayout>	
		    <LinearLayout 
	        	android:orientation="horizontal" 
	        	android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content" 
	        	android:layout_marginBottom="5.0dip">
	        	<TextView 
	            	android:id="@+id/discuss_happento1" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	style="@style/nickName" />
	            <TextView 
	           		android:paddingLeft="5dip"
	            	android:id="@+id/discuss_content1" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	android:gravity="left"
	            	style="@style/content" />
        	</LinearLayout>
		 </LinearLayout>
		 <LinearLayout 
		 	android:visibility="gone"
		 	android:id="@+id/discuss_linearLayout2"
			android:orientation="horizontal" 
			android:paddingLeft="11.0dip" 
			android:paddingTop="5.0dip" 
			android:paddingRight="7.0dip" 
			android:paddingBottom="2.0dip" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		    <FrameLayout 
		    	android:layout_width="24.0dip" 
		    	android:layout_height="24.0dip" 
		    	android:foreground="@drawable/images_border_radius">
		        <ImageView 
		        	android:id="@+id/avatar_image_in_discuss2" 
		        	android:layout_width="fill_parent" 
		        	android:layout_height="fill_parent" 
		        	android:background="@drawable/avatar_default"
		        	android:scaleType="centerCrop" />
		    </FrameLayout>	
		    <LinearLayout 
	        	android:orientation="horizontal" 
	        	android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content" 
	        	android:layout_marginBottom="5.0dip">
	        	<TextView 
	            	android:id="@+id/discuss_happento2" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	style="@style/nickName" />
	            <TextView 
	            	android:paddingLeft="5dip"
	            	android:id="@+id/discuss_content2" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	android:gravity="left"
	            	style="@style/content" />
        	</LinearLayout>
		 </LinearLayout>
		 <LinearLayout 
		  	android:visibility="gone"
			android:id="@+id/discuss_linearLayout3"
			android:orientation="horizontal" 
			android:paddingLeft="11.0dip" 
			android:paddingTop="5.0dip" 
			android:paddingRight="7.0dip" 
			android:paddingBottom="2.0dip" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		    <FrameLayout 
		    	android:layout_width="24.0dip" 
		    	android:layout_height="24.0dip" 
		    	android:foreground="@drawable/images_border_radius">
		        <ImageView 
		        	android:id="@+id/avatar_image_in_discuss3" 
		        	android:layout_width="fill_parent" 
		        	android:layout_height="fill_parent" 
		        	android:background="@drawable/avatar_default"
		        	android:scaleType="centerCrop" />
		    </FrameLayout>	
		    <LinearLayout 
	        	android:orientation="horizontal" 
	        	android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content" 
	        	android:layout_marginBottom="5.0dip">
	        	<TextView 
	            	android:id="@+id/discuss_happento3" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	style="@style/nickName" />
	            <TextView 
	            	android:paddingLeft="5dip"
	            	android:id="@+id/discuss_content3" 
	            	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content" 
	            	android:gravity="left"
	            	style="@style/content" />
        	</LinearLayout>
		 </LinearLayout>
    </LinearLayout>
</LinearLayout>
